public static getAppPackage() {
    const entity = process.env.ENTITY;
    const isIOS = driver.isIOS;
    
    const entityMapping = {
        ENBD: {
            ios: process.env.BUNDLE_ID_EBI,
            android: process.env.APP_PACKAGE_ENBD
        },
        EI: {
            ios: process.env.BUNDLE_ID_EIB,
            android: process.env.APP_PACKAGE_EI
        },
        LIV: {
            ios: process.env.BUNDLE_ID_LIV,
            android: process.env.APP_PACKAGE_LIV
        }
    };

    if (entityMapping[entity]) {
        return isIOS ? entityMapping[entity].ios || '' : entityMapping[entity].android || '';
    }
    
    return '';
}



