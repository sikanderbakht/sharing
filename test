
class JointAccountBottomSheet(
    context: Context,
    private val cmsManager: CmsManager,
    private val isCancellable: Boolean = false
) {
    private val binding =
        BottomSheetJointAccountBinding.inflate(LayoutInflater.from(context))
    private val bottomSheetDialog:
            BottomSheetDialog = BottomSheetDialog(context, R.style.DaoCustomBottomSheetDialog)

    fun show(authorizationWarningListener: (type: JointAccountWarningSelection) -> Unit) {
        bottomSheetDialog.apply {
            behavior.apply {
                state = BottomSheetBehavior.STATE_EXPANDED
                setDraggable(false)
            }
            setContentView(binding.root)
            setCancelable(isCancellable)
            setCanceledOnTouchOutside(isCancellable)
        }

        setCmsUiBindingData()

        binding.apply {
            buttonNo.setOnClickListener {
                authorizationWarningListener.invoke(JointAccountWarningSelection.NO)
                bottomSheetDialog.dismiss()
            }

            buttonYes.setOnClickListener {
                authorizationWarningListener.invoke(JointAccountWarningSelection.YES)
                bottomSheetDialog.dismiss()
            }
        }

        bottomSheetDialog.show()
    }

    private fun setCmsUiBindingData() {
        binding.data = JointAccountWarningDialogData(
            jointAccountWarningTitle = cmsManager.getStringForKey(CmsKeyMapper.OPENJOINTACCOUNTALERTTITLE),
            jointAccountWarningDescription = cmsManager.getStringForKey(CmsKeyMapper.OPENJOINTACCOUNTALERTSUBTITLE),
            jointAccountWarningNoBtnTitle = cmsManager.getStringForKey(CmsKeyMapper.NORMALACCOUNTBUTTONTITLE),
            jointAccountWarningYesBtnTitle = cmsManager.getStringForKey(CmsKeyMapper.JOINTACCOUNTBUTTONTITLE),
            cmsManager = cmsManager
        )
    }
}










